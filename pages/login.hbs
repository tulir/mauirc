<div class="auth">
	<a href="#"><h1>mauIRC</h1></a>
	<div class="alert alert-error auth-alert hidden" role="alert" id="error"></div>
	<form action="javascript:void(0)">
		<input type="email" class="textfield" id="email" placeholder="E-mail"/>
		<input type="password" class="textfield" id="password" placeholder="Password"/>
		<button type="button" class="btn left" data-event="auth.register">Register</button>
		<button type="submit" class="btn right" data-event="auth.login">Log in</button>
	</form>
	<a class="footer-link" href="#/forgot-password">Forgot password?</a>
</div>

<a href="https://github.com/tulir/mauirc">
	<img
		src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png"
		style="position: fixed; top: 0; right: 0;"
		alt="Fork me on GitHub"
	/>
</a>
