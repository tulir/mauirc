{{#unless inline}}
	{{> topbar channels=true}}
{{/unless}}

<div class="channel-list" id="networks">
	{{#each networks}}
		<div class="network" data-name="{{this.name}}">
			<div class="name">
				{{this.name}}
			</div>
			<div class="channels">
				{{#each this.channels}}
					<div class="channel" data-network="{{../name}}" data-name="{{this.name}}">
						{{this.name}}
					</div>
				{{/each}}
			</div>
		</div>
	{{/each}}
</div>
