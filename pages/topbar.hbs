{{#unless in-container}}<div class="standalone-topbar-container">{{/unless}}

<div class="topbar">
	{{#if chat}}
		<div class="topic" data-event="topic" data-listen="doubleclick">
			<span class="text">{{topic}}</span>
			<input
					type="text"
					class="edit"
					data-event="topic-edit"
					data-listen="blur keydown"
					value="{{topic}}"/>
		</div>

		<div class="left button enter-channels" data-href="#/channels">
			<img src="img/left-button.svg"/><span>Channels</span>
		</div>
		<div class="right button enter-users" data-href="#/users/{{network}}/{{channel}}">
			<span>Users</span><img src="img/right-button.svg"/>
		</div>
		<div class="enter-settings button right" data-href="#/settings">
			<img src="img/settings.svg"/>
		</div>
	{{else if users}}
		<div class="left button enter-chat" data-href="#/chat/{{network}}/{{channel}}">
			<img src="img/left-button.svg"/><span>Chat</span>
		</div>
		<div class="enter-settings button right" data-href="#/settings">
			<img src="img/settings.svg"/>
		</div>
	{{else if rawio}}
		<div class="left button enter-chat" data-href="#/chat">
			<img src="img/left-button.svg"/><span>Chat</span>
		</div>
		<div class="enter-settings button right" data-href="#/settings">
			<img src="img/settings.svg"/>
		</div>
	{{else if channels}}
		<div class="right button enter-chat" data-href="#/chat/{{network}}/{{channel}}">
			<span>Chat</span><img src="img/right-button.svg"/>
		</div>
	{{else if settings}}
		<div class="left button enter-chat" data-href="#/chat/{{network}}/{{channel}}">
			<img src="img/left-button.svg"/><span>Chat</span>
		</div>

		<div class="right button" data-event="settings.clear">
			<span>Clear history</span>
		</div>
		<div class="right button" data-event="settings.reload">
			<span>Reload history</span>
		</div>
		<div class="right button" data-event="settings.part">
			<span>Part</span>
		</div>
	{{/if}}
</div>

{{#unless in-container}}</div>{{/unless}}
