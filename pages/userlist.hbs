{{#unless inline}}
	{{> topbar users=true network=network channel=channel}}
{{/unless}}

<div class="userlist" id="userlist">
	{{#each users}}
		<div
				class="user {{this.own}}"
				data-event="user"
				data-listen="click contextmenu"
				data-network="{{../network}}"
				data-name="{{this.name}}">
			{{~this.listName~}}
		</div>
	{{/each}}

	<div
			class="user invite"
			data-event="invite-user"
			data-listen="click"
			data-network="{{network}}"
			data-channel="{{channel}}">
		<span class="title">Invite User...</span>
		<input
				type="text"
				class="actual-inviter hidden"
				data-event="invite-user"
				data-listen="blur keydown"/>
	</div>
</div>
