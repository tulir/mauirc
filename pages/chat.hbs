<div class="chat-container" id="chat-container">
	<div class="topbar-container">
		{{> topbar chat=true in-container=true}}
	</div>
	<div class="chanlist-container">
		{{> chanlist inline=true networks=networks}}
	</div>
	<div class="userlist-container">
		{{> userlist inline=true users=users}}
	</div>
	<div class="chat" data-network="{{network}}" data-channel="{{channel}}">
		{{#each messages}}
			{{> message this}}
		{{/each}}
	</div>
	<form class="input-container" data-event="chat" data-listen="submit">
		<input
			type="text"
			id="chat-input"
			autocomplete="off"
			placeholder="Write your message..."
		>
	</div>
</div>
