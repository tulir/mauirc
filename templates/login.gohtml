<div class="auth-wrap">
  <h1 class="auth-title">mauIRC</h1>
  <div class="alert alert-error auth-alert hidden" role="alert" id="error"/>
  <form action="#" class="auth-form">
    <input type="email" class="textfield authfield email" id="email" placeholder="E-mail">
    <input type="password" class="textfield authfield password" id="password" placeholder="Password">
    <button class="btn btn-auth register" type="submit" id="auth-register" onClick="register()">Register</button>
    <button class="btn btn-auth login" type="submit" id="auth-login" onClick="auth()">Log in</button>
  </form>
  <a class="auth-footer-link" href="javascript:void(0)" onClick="forgotPassword()">Forgot password?</a>
</div>

